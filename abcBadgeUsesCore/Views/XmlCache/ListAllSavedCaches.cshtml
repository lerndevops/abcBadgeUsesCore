
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowSavedCaches</title>
</head>
<body>

    <h1>List of Saved Cache Files</h1>

    @{ 
        string strPathToFolderXML = ciBadgeForWeb.App_Start.DiskFolders.PathToFolder_XML(true);
        int intFileNumber = 0;

        foreach (FileInfo each_file_Info in (new DirectoryInfo(strPathToFolderXML)).GetFiles("*.xml"))
        {
            //We have to remove the file extension, first. 
            string strXmlFile_NoExt = each_file_Info.Name.Replace(".xml", "");
            intFileNumber += 1;

            <div>
                 @*<a href="~/XmlCache?XmlCacheFile=@each_file_Info.Name">@each_file_Info.Name</a>*@

                <p>XML File # @intFileNumber is:  
                <a href="~/XmlCache/LoadOneSavedCache/@strXmlFile_NoExt">
                      @each_file_Info.Name</a></p>
            </div>
        }

   }


</body>
</html>
